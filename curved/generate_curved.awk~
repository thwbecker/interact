BEGIN{
    pif=180/pi;
    nx=25;
r=10;
aphi=pi/2;
atheta=pi/2/30;

dazi=pi/2/(nx*2);
dtheta=atheta/nx;
print(aphi,atheta)
for(azi=dazi/2;azi < aphi+1e-6;azi+=dazi){
for(theta=pi/2;theta < pi/2+atheta;theta+=dtheta){

x0=r*sin(theta)*cos(azi);
y0=r*sin(theta)*sin(azi);
z0=r*cos(theta);
print(x0,y0,z0)
i=1;
for(a=azi-dazi/2;a<azi+dazi/2+1e-6;a+=dazi/2){
for(t=theta-dtheta/2;t<theta+dtheta/2+1e-6;t+=dtheta/2){
	x[i]=r*sin(theta)*cos(azi);
	y[i]=r*sin(theta)*sin(azi);
	z[i]=r*cos(theta);
	i++;
print(i,x[i],y[i],z[i])
}
exit
l=sqrt((x[3]-x[1])**2+(y[3]-y[1])**2);
print(x0,y0,z0,(azi-pi/2)*pif,dip*pif,l/2,w/2,0)
}
}
}}'
